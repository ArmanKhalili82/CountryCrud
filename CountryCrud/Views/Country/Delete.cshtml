@model FullInfo

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Country" class="p-0"></label>
            <input asp-for="Country" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="City" class="p-0"></label>
            <input asp-for="City" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <label asp-for="Population" class="p-0"></label>
            <input asp-for="Population" disabled class="form-control" />
        </div>
        <div class="mb-3 row">
            <select class="form-select" disabled asp-for="IsCapital">
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
        </div>

        <div class="row row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Country" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
